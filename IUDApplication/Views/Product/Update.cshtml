@model IUDApplication.ViewModel.CrudViewModel

<h1>Update Product</h1>

@using (Html.BeginForm("Update", "Product"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Product.ProductName)
        @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Product.CategoryId)
        @Html.DropDownListFor(x => x.Product.CategoryId,
        new SelectList(Model.Category, "CategoryId", "CategoryName"), "Select Category Type", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(x => x.Product.Id)
    <button type="submit" class="btn btn-primary">Edit</button>
}