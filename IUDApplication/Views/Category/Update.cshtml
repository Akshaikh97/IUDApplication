@model IUDApplication.Models.Category

<h1>Update Category</h1>

@using (Html.BeginForm("Update", "Category"))
{
<div class="form-group">
    @Html.HiddenFor(x => x.CategoryId)
    @Html.LabelFor(x => x.CategoryName)
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
</div>
    
    <button type="submit" class="btn btn-primary">Edit</button>
    <a href="/Category/Index" class="btn btn-danger">Back</a>
}